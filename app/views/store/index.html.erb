<h1>Xur's Agent of the Nine Exotic Items Electronic Store</h1>

<h2>Home Page</h2>

<nav><%= link_to "Weapons", weapon_path %> | <%= link_to "Armour", armour_path %> | <%= link_to "Search", search_path %></nav>

<br />
<h3>Weapons</h3>

<p>
	<% @weapons.each do |weapon| %>
		<li><%=  link_to weapon.name, singleWeapon_path(weapon) %></li>
		
		<% if weapon.image.present? %>
			<li><%= image_tag weapon.image.thumb.url %></li>
		<% end %>

		<li>Price: <%= weapon.price %> Strange Coins</li>
		<br />
	<% end %>
</p>

<h3>Armour</h3>

<p>
	<% @armours.each do |armour| %>
		<li><%=  link_to armour.name, singleArmour_path(armour) %> </li>
		
		<% if armour.image.present? %>
			<li><%= image_tag armour.image.thumb.url %></li>
		<% end %>

		<li>Price: <%= armour.price %> Strange Coins</li>
		<br />
	<% end %>
</p>

<h6><%= link_to "Info", info_path %></h6>